<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
        <name>NTLM SSO</name>
        <author>Bruno Grossmann</author>
        <version>0.2</version>
        <category>Security and Spam</category>
        <description>
                Plugin to authenticate against Active Directory. Requires Winbind and Apache to be compiled with mod_perl
        </description>
        <license>GNU Public License version 2</license>
	<requires>
                <type>elgg_release</type>
                <version>1.10</version>
        </requires>
        <conflicts>
                <type>plugin</type>
                <name>ldap_auth</name>
        </conflicts>
        <suggests>
                <type>plugin</type>
                <name>profile</name>
                <version>1.8</version>
        </suggests>

        <admin_interface>simple</admin_interface>
</plugin_manifest>

