.lang_toggle {
	text-align: right;
}

.lang_toggle .not_active {
	font-weight: bold;
	color: #ffffff;
	background:#AD5F6B;
	border: 1px solid #AD5F6B;
	-webkit-border-radius: 4px; 
	-moz-border-radius: 4px;
	width: auto;
	padding: 4px;
	margin: 10px 10px 10px 0px;
	cursor: pointer;
}

.lang_toggle .active {
	font-weight: bold;
	color: #ffffff;
	background:#AC1A2F;
	border: 1px solid #AC1A2F;
	-webkit-border-radius: 4px; 
	-moz-border-radius: 4px;
	width: auto;
	padding: 4px;
	margin: 10px 10px 10px 0px;
}

.lang_toggle .active:hover,
.lang_toggle .not_active:hover, {
	background: #AC1A2F;
	border: 1px solid #AC1A2F;
	color: #ffffff;
	text-decoration: none;
}

